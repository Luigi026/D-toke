                            <!-- carrito desktop -->
                           
                            <% if (locals.userLogin) { %>
                                <div class="cart__container">
                                    <a class="onlyFor_desktop" href="#" id="btn-cart" data-bs-toggle="modal" data-bs-target="#cart">
                                        <i class="fa-solid fa-truck-fast slide-in-blurred-left"></i>
                                        <span id="show-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" hidden>
                                 
                                        </span>
                                        
                                    </a>
                                </div>
                                <div class="home__header__nav__div1">
                                    <a class="nav-item" href="/users/profile">Hola <%= userLogin.name %>!</a>
