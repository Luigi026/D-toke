                                    </div>
                                    <button class="home__header--button"><a href="/users/login">ingresar</a></button>
                                    <% } %>
            
                        </div>
                    </div>
                </nav>
            </header>
            
            <!-- Modal -->
            <div class="modal fade" id="cart" tabindex="-1" aria-labelledby="cartLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-3" id="cartLabel">Carrito de compra</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <div id="cart-body">
                        
                      </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Continuar comprando</button>
                      <button type="button" id="btn-clearCart" onclick="clearCart()" class="btn btn-danger">Vaciar carrito</button>
                      <button type="button" class="btn btn-success">Finalizar compra</button>
                    </div>
                  </div>
                </div>
              </div>

        </div>
        <main class="home__main">

            <!-- DESKTOP VIEW -->
            <section class="home__main__section__desktopage onlyFor_desktop" data-aos="fade-up">

                <form class="d-flex justify-content-start onlyFor_desktop" role="search" action="/search" method="GET" id="formSearch">
                    <input 
                    class="form-control rounded-0 rounded-start" 
                    type="text" 
                    name="keywords"  
                    placeholder="Buscar zapatilla..."
                    aria-label="Search" 
                    id="keywords">

                    <button class="btn rounded-0 rounded-end" type="submit" style="background-color: var(--colorBanner);">
                        <a href="/products/productsList"><i class="fa-solid fa-magnifying-glass" style="color: #fff;"></i></a>
                    </button>   
                </form>


                <section class="home__main__section-cards">
                    <div class="products__section__cards-container-desktop">
                        <% productsList.forEach(product=> { %>
                            <%- include('partials/productsListCards',{ ...product.dataValues, toThousand }) %>
                                <% }) %>
                    </div>
                </section>

            </section>
            <!-- ******************* tablet section *********************** -->

            <section class="productsList__section-cards onlyFor_desktop" data-aos="fade-up">
                <form id="formSearch" class="d-flex justify-content-start productsList__buscador" role="search" action="/search"
                    method="GET">
                    <input 
                    class="form-control rounded-0 rounded-start" 
                    type="text" 
                    name="keywords"  
                    placeholder="Buscar zapatilla..."
                    aria-label="Search" 
                    id="keywords">

                    <button class="btn rounded-0 rounded-end" type="submit" style="background-color: var(--colorBanner);">
                        <a href="/products/productsList"><i class="fa-solid fa-magnifying-glass" style="color: #fff;"></i></a>
                    </button>   
                </form>
                <div class="productsList__section__cards-container">
                    <% productsList.forEach(product=> { %>
                        <%- include('partials/productsListCards',{ ...product.dataValues, toThousand }) %>
                            <% }) %>
                </div>
            </section>
        </main>

        <%- include('partials/footer') %>

            <!-- AOS -->
            <script>
                AOS.init();
            </script>
            <!-- Swiper JS -->
            <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
            <!-- boostrap -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
                crossorigin="anonymous"></script>
                

    </body>

</html>